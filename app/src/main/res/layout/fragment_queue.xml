<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="@dimen/viewMargin"
  android:paddingBottom="@dimen/viewMargin"
  android:background="@android:color/white">

  <ImageView
    android:id="@+id/album_art"
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:layout_marginLeft="@dimen/borderMargin"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:background="@android:color/black" />

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/viewMargin"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/album_art"
    app:layout_constraintRight_toLeftOf="@+id/context_menu"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
      android:id="@+id/song_title"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="marquee"
      android:marqueeRepeatLimit="marquee_forever"
      android:scrollHorizontally="true"
      android:singleLine="true"
      tools:text="Song title" />
    <TextView
      android:id="@+id/song_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="marquee"
      android:marqueeRepeatLimit="marquee_forever"
      android:scrollHorizontally="true"
      android:singleLine="true"
      tools:text="Song description" />
    <TextView
      android:id="@+id/song_duration"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="3:45" />
    <TextView
      android:id="@+id/song_queuer"
      android:textStyle="italic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="marquee"
      android:marqueeRepeatLimit="marquee_forever"
      android:scrollHorizontally="true"
      android:singleLine="true"
      tools:text="Username" />
  </LinearLayout>

  <ImageButton
    android:id="@+id/context_menu"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_action_overflow"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
